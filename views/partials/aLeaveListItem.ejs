<div class="row mx-2 my-4">

    <div class="col-10 card shadow" style="padding-bottom: 15px;">
        <div class="row w-100" style="margin-bottom: 15px;">
            <h5 class="card-header w-100">Leave ID: <%= leaveApplication.LID %> </h5>
        </div>
        <div class="row" style="margin-bottom: 15px;">
            <div class="col MyAutoTBMargin">From : <%= prettyDate( leaveApplication.leaveStartDate ) %></div>
            <div class="col MyAutoTBMargin">To : <%= prettyDate( leaveApplication.leaveEndDate ) %> </div>
        </div>
        <div class="row">
            <div class="col MyAutoTBMargin">Status: 

                <% 
                    let btnClass = 'btn-info'
                    switch(leaveApplication.status){
                        case 'pending':
                            btnClass = 'btn-warning'
                            break;
                        case 'approved':
                            btnClass = 'btn-primary'
                            break;
                        case 'rejected':
                            btnClass = 'btn-outline-danger'
                            break;
                        case 'terminated':
                            btnClass = 'btn-danger'
                            break;
                        case 'systemTerminated':
                            btnClass = 'btn-danger'
                            break;
                    } 
                %>
                <button class="btn <%= btnClass %>"><%= leaveApplication.status.toUpperCase() %></button>

            </div>
            <div class="col MyAutoTBMargin">Applied on : <%= prettyDate( leaveApplication.dateOfApplication, true ) %>
            </div>
        </div>
    </div>



    <div class="col-1 btn shadow" style="background-color: orange;">
        <a href="/leaves/<%=leaveApplication.LID%>">
            <div class="container d-flex h-100">
                <div class="row justify-content-center align-self-center">

                    <div style=" margin-top: auto; margin-bottom: auto">
                        <img src="images/next.png" alt="next" style="width: 40px; height: 40px;">
                    </div>

                </div>
            </div>
        </a>
    </div>

</div>
